@using Entity


<h2>Product Groups - Create</h2>

<form method="post">
	<div class="form-group">
		<input name="GroupName" class="form-control" placeholder="Product Group Name" /> @*placeholder yerine label eklenebilir*@
		<button>Save</button>
	</div>
	<div class="form-group">
		<select name="TopGroupId">
			<option value="">None</option>
			@foreach (ProductGroup item in ViewBag.Groups)
			{
				<option value="@item.ID">@item.GroupName</option> //kullanıcı grup adını görüyor ama biz db ye id'yi gönderiyoruz
			}
		</select>
	</div>
	<button class="btn btn-primary">Save</button>
</form>