@using Entity
@model List<Brand>

<h2>Brands</h2>

<a href="/Brand/New">Create New Brand</a>

<style>
	th, td {
		padding: 20px;
		border:1px solid black;
	}
</style>

<table>
	<tr>
		<th>Brand Name</th> <th>Action</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.BrandName</td>
			<td>
				<a href="?delete=@item.ID">Delete</a>
				<a href="/Brand/Edit/@item.ID">Edit</a>
			</td>
		</tr>
	}
</table>